default_platform(:ios)

platform :ios do
  desc "Generate new screenshots"
  lane :screenshots do
    capture_screenshots(
      workspace: "Hackers.xcworkspace", 
      scheme: "Hackers",
      override_status_bar: true
    )
    frameit(
      path: "./fastlane/screenshots/"
    )
    # upload_to_app_store(skip_binary_upload: true, skip_metadata: true)
  end

  desc "Run Unit Tests"
  lane :test do
    run_tests(
      project: "Hackers.xcodeproj",
      scheme: "Hackers",
      only_testing: ["HackersTests"]
    )
  end

  desc "Run UI Tests"
  lane :uitest do
    reset_simulator_contents
    run_tests(
      scheme: "HackersUITests"
    )
  end

  desc "Build"
  lane :build do |options|
    xcodebuild(
      project: "Hackers.xcodeproj",
      scheme: "Hackers",
      configuration: "Debug",
      clean: options[:clean],
      build: true,
      sdk: "iphonesimulator"
    )
  end

  desc "Archive"
  lane :archive do
    gym(scheme: "Hackers")
  end

  desc "Lint"
  lane :lint do
    swiftlint
  end
end
