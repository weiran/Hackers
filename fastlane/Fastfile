default_platform(:ios)

platform :ios do
  desc "Run Unit Tests"
  lane :test do
    run_tests(scheme: "HackersTests")
  end

  desc "Run UI Tests"
  lane :uitest do
    run_tests(scheme: "HackersUITests")
  end

  desc "Build"
  lane :build do |options|
    xcodebuild(
      project: "Hackers.xcodeproj",
      scheme: "Hackers",
      configuration: "Debug",
      clean: options[:clean],
      build: true,
      sdk: "iphonesimulator"
    )
  end

  desc "Archive"
  lane :archive do
    gym(scheme: "Hackers")
  end

  desc "Lint"
  lane :lint do
    swiftlint(config_file: ".swiftlint.yml")
  end
end
