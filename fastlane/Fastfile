default_platform(:ios)

platform :ios do
  desc "Generate new screenshots"
  lane :screenshots do
    capture_screenshots(workspace: "Hackers.xcworkspace", scheme: "Hackers")
    frameit(
      path: "./fastlane/screenshots/",
      override_status_bar: true
    )
    # upload_to_app_store(skip_binary_upload: true, skip_metadata: true)
  end

  desc "Run Tests"
  lane :test do
    scan(
      scheme: "HackersUITests",
      derived_data_path: "scan_derived_data" # https://github.com/fastlane/fastlane/issues/15768
    )
  end

  desc "Build"
  lane :build do |options|
    xcodebuild(
      workspace: "Hackers.xcworkspace",
      scheme: "Hackers",
      configuration: "Debug",
      clean: options[:clean],
      build: true,
      sdk: "iphonesimulator"
    )
  end

  desc "Archive"
  lane :archive do
    gym(scheme: "Hackers")
  end

  desc "Lint"
  lane :lint do
    swiftlint
  end
end
